{
  "manifest_version": 3,
  "name": "AI Summarize Assistant",
  "version": "1.0",
  "description": "AI-powered Research Assistant",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8080/*"
  ],
  "action": {
    "default_title": "AI Summarize Assistant",
    "default_icon": "image.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
